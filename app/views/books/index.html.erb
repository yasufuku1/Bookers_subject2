<div>
  <%= flash[:successfully] %>
</div>
<h1>Books</h1>

<table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3" ></th>
    </tr>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show", book_path(book) %></td>
        <td><%= link_to "edit", edit_book_path(book) %></td>
        <td><%= link_to "destroy", book_path(book), method: :delete, "data-confirm"=>"Are you sure?" %></td>
      </tr>
      <% end %>
</table>
<h2>New Book</h2>
<% if @book.errors.any? %>
<ul>
  <% @book.errors.full_message.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

  <%= form_with model: @book , url: books_path, method: :post do |f| %>
    <div class ="book_box">
      <lavel>title</lavel>
      <%= f.text_field :title %>
    </div>
    <div class="book_box">
      <lavel>body</lavel>
      <%= f.text_area :body %>
    </div>
    <div>
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>