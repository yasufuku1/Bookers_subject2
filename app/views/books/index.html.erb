<h1>Books</h1>

<table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3" ></th>
    </tr>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show", book_path(book.id) %></td>
        <td><%= link_to "edit", edit_book_path(book.id) %></td>
        <td><%= link_to "destroy", "/books/#{book.id}" , method: :delete, "data-confirm"=>"Are you sure?" %></td>
      </tr>
      <% end %>
</table>
<h2>New Book</h2>
<div>
  <%= flash[:notice] %>
</div>
  <%= form_with model: @book do |f| %>
    <div class ="new_book_box">
      <lavel>title</lavel>
      <%= f.text_field :title %>
    </div>
    <div class="new_book_box">
      <lavel>body</lavel>
      <%= f.text_area :body %>
    </div>
    <div>
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>